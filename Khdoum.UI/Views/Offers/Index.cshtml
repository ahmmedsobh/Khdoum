</div>
@section Scripts
{
    <script>
        $(function () {


            FillTable();
            FillProductsDropdown();

            $("#AddForm").submit(function (e) {
                e.preventDefault();
                Insert();
            });

            $("#EditForm").submit(function (e) {
                e.preventDefault();
                Update();
            });

            $(document).on("click", ".EditBtn", function () {
                var ItemId = $(this).attr("ItemId");
                ViewData(ItemId, "EditModal");
            });

            $(document).on("click", ".DetailsBtn", function () {
                var ItemId = $(this).attr("ItemId");
                console.log(ItemId);
                ViewData(ItemId, "ViewModal");
            });

            $(document).on("click", ".DeleteBtn", function () {
                var ItemId = $(this).attr("ItemId");
                Delete(ItemId);
            });
















        });

        function Insert() {

            //if (!Validation('#add_modal')) {
            //    e.preventDefault();
            //    return;
            //}

            //Create FormData object
            var fileData = new FormData();

            var SerializedData = $("#AddForm").serializeArray();





            $.each(SerializedData, function (index, item) {
                fileData.append(item.name, item.value);
            });


            $.ajax({
                type: 'POST',
                url: `@Url.Action("Create", "Offers")`,
                processData: false,
                contentType: false,
                data: fileData ,
                //beforeSend: function () {

                //},

            success: function (data) {

                if (data.status == true) {
                    EmptyFeilds();
                    $('#AddModal').modal('hide');
                    FillTable();
                }

                //if (data.Message.Title != null && data.Message.Title != "" ) {
                //    var title = data.Message.Title;
                //    var body = data.Message.Description;
                //    var type = data.Message.Type;
                //    ShowMessage(title, body, type);
                //}
                },
                error: function (ex) {

                    console.log(ex);
                    console.log(response);

                    var r = jQuery.parseJSON(response.responseText);
                    alert("Message: " + r.Message);
                    alert("StackTrace: " + r.StackTrace);
                    alert("ExceptionType: " + r.ExceptionType);
                }
            });

        }

        function ViewData(Id,modal) {
            $.ajax({
                type: 'POST',
                url: `@Url.Action("GetSingle", "Offers")`,
                data: {
                    Id:Id
                },
                //beforeSend: function () {

                //},

                success: function (data) {

                    

                if (data.offer.id > 0) {
                    $(`#${modal} .ID`).val(data.offer.id);
                    $(`#${modal} .MaximumUseCount`).val(data.offer.maximumUseCount);
                    $(`#${modal} .UsedCount`).val(data.offer.usedCount);
                    $(`#${modal} .Discount`).val(data.offer.discount);
                    $(`#${modal} .ExpiryDate`).val(data.offer.expiryDate);

                    var ProductOption = `<option value="${data.offer.marketProductsID}">${data.offer.name}</option>`;
                    $(`#${modal} .MarketProductId`).append(ProductOption);

                    $(`#${modal} .DiscountType`).val(data.offer.discountType);
                    $(`#${modal} .DiscountType`).change();

                    if (data.offer.isActive) {
                        $(`#${modal} .IsActive`).attr("checked", true);
                    }
                    else {
                        $(`#${modal} .IsActive`).attr("checked", false);
                    }



                    $(`#${modal}`).modal('show');
                }

                },
                error: function (ex) {

                    var r = jQuery.parseJSON(response.responseText);
                    alert("Message: " + r.Message);
                    alert("StackTrace: " + r.StackTrace);
                    alert("ExceptionType: " + r.ExceptionType);
                }
            });
        }

        function Update() {

            //if (!Validation('#add_modal')) {
            //    e.preventDefault();
            //    return;
            //}

            //Create FormData object
            var fileData = new FormData();

            var SerializedData = $("#EditForm").serializeArray();


            var fileUpload = $("#EditForm #Image").get(0);
            if (fileUpload != null && fileUpload != undefined) {
                var file = fileUpload.files[0];
                fileData.append('Image', file);
            }


            $.each(SerializedData, function (index, item) {
                fileData.append(item.name, item.value);
                console.log(`${item.name}: ${item.value}`);
            });


            $.ajax({
                type: 'POST',
                url: `@Url.Action("Update", "Offers")`,
                processData: false,
                contentType: false,
                data: fileData ,
                //beforeSend: function () {

                //},

            success: function (data) {

                if (data.status == true) {
                    $('#EditModal').modal('hide');
                    FillTable();
                }

                //if (data.Message.Title != null && data.Message.Title != "" ) {
                //    var title = data.Message.Title;
                //    var body = data.Message.Description;
                //    var type = data.Message.Type;
                //    ShowMessage(title, body, type);
                //}
                },
                error: function (ex) {



                    var r = jQuery.parseJSON(response.responseText);
                    alert("Message: " + r.Message);
                    alert("StackTrace: " + r.StackTrace);
                    alert("ExceptionType: " + r.ExceptionType);
                }
            });

        }

        function FillTable() {
            var Url = "@Url.Action("GetList", "Offers")";
            var Columns = [
                {
                    data: null, render: function (data, type, row) {
                        var img = `<img src="${data.img}" class="tbl-img"/>`;
                        return img;
                    }
                },
                { data: 'name', 'name': 'name' },
                { data: 'discount', 'discount': 'discount' },
                { data: 'maximumUseCount', 'maximumUseCount': 'maximumUseCount' },
                { data: 'usedCount', 'usedCount': 'usedCount' },
                { data: 'isActive', 'isActive': 'isActive' },
                {
                    data: null, render: function (data, type, row) {
                        return `<a class="btn btn-warning tbl-btn EditBtn" ItemId="${data.id}" ><i class="fas fa-pen"></i></a>
                                <a class="btn btn-info tbl-btn DetailsBtn" ItemId="${data.id}" ><i class="fas fa-info"></i></a>
                                <a class="btn btn-danger tbl-btn DeleteBtn" ItemId="${data.id}" ><i class="fas fa-trash"></i></a>`;
                    }
                },
            ];
            BuildAjaxDataTable($("#table"), Url, Columns, [],"offers",false);
        }

        function Delete(Id, Name = null) {

            var name = (Name == null) ? "العنصر" : Name;

            Swal.fire({
                text: "هل انت متأكد من أنك تريد الحذف " + name + "?",
                icon: "warning",
                showCancelButton: !0,
                buttonsStyling: !1,
                confirmButtonText: "نعم احذف",
                cancelButtonText: "الغاء",
                customClass: {
                    confirmButton: "btn fw-bold btn-danger",
                    cancelButton: "btn fw-bold btn-active-light-primary"
                }
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    //Swal.fire('Saved!', '', 'success')

                    $.ajax({
                        type: 'POST',
                        url: `@Url.Action("Delete", "Offers")`,
                        data: {
                            Id: Id
                        },
                        //beforeSend: function () {

                        //},

                        success: function (data) {


                            if (data.status == true) {
                                FillTable();
                            }



                        },
                        error: function (ex) {

                            var r = jQuery.parseJSON(response.responseText);
                            alert("Message: " + r.Message);
                            alert("StackTrace: " + r.StackTrace);
                            alert("ExceptionType: " + r.ExceptionType);
                        }
                    });


                } else if (result.isDenied) {
                    //Swal.fire('Changes are not saved', '', 'info')
                }
            });
        }

        function FillProductsDropdown() {
            $('.MarketProductId').each(function () {
                $(this).select2({
                    dropdownParent: $(this).parent(),
                    width: 'resolve',
                    minimumInputLength: 2,
                    ajax: {
                    url: `@Url.Action("ProductsList", "offers")`,
                    dataType: 'json',
                    type: "POST",
                    quietMillis: 50,
                    data: function (param) {
                        return {
                            term: param.term
                        };
                    },
                    processResults: function (response) {
                        return {
                            results: response.products
                        };
                    },
                    /*cache: true*/
                }
                });
            });


           
        }

    </script>
}