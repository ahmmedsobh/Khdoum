    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="AddForm" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">اضافة</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">المنتج</label>
                                <select name="MarketProductsID" class="form-control MarketProductId normal">
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="MaximumUseCount" class="control-label">الحد الاقصي للاستخدام</label>
                                <input asp-for="MaximumUseCount" class="form-control MaximumUseCount" />
                                <span asp-validation-for="MaximumUseCount" class="text-danger "></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Discount" class="control-label">الخصم</label>
                                <input asp-for="Discount" class="form-control Discount" />
                                <span asp-validation-for="Discount" class="text-danger "></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">نوع الخصم</label>
                                <select name="DiscountType" class="form-control DiscountType">
                                    <option value="1">نسبة</option>
                                    <option value="2">بالجنية</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ExpiryDate" class="control-label">تاريخ الانتهاء</label>
                                <input asp-for="ExpiryDate" class="form-control ExpiryDate" />
                                <span asp-validation-for="ExpiryDate" class="text-danger "></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input IsActive" value="true" asp-for="IsActive" /> الحالة
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>
                    <button type="submit" id="AddBtn" class="btn btn-primary">اضافة</button>
                </div>
            </div>
        </form>

    </div>
</div>

